---
import { proyectos } from '../data/proyectos'

---
<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 p-4">
  {proyectos.map((proyecto) => (
    <article
      class="card w-full h-64 bg-gray-700 shadow space-y-2 rounded-md group"
      style={{ backgroundImage: `url(${proyecto.imagen})`, backgroundSize: 'cover', backgroundPosition: 'center' }}
    >
      <div class="bg-gray-900 w-full bg-opacity-35 p-4 rounded-md h-full flex flex-col justify-between">
        <h3 class="text-xl text-white font-semibold">{proyecto.nombre}</h3>
        <div class="flex flex-wrap gap-2">
          {proyecto.tecnologias.map((tech) => (
            <span class=" text-lg font-bold text-white p-1 rounded-md bg-gray-800   ">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </article>
  ))}
</div>





